1. mutable lambda 
   []() mutable{}
   example:int i =0;
   		   auto l = [i]() mutable{return i++;};
   		   assert(l()==0);
   		   assert(l()==1);
   		   assert(l()==2);
   		   assert(l()==3);
   		   assert(l()==4);
